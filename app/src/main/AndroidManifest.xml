<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="g.game" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="g.game.Activity.MainActivity"
            android:theme="@android:style/Theme.Black"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="g.game.Activity.GameActivity" android:label="@string/app_name"  android:screenOrientation="landscape"> </activity>
        <activity android:name="g.game.Activity.LoginActivity" android:label="@string/app_name" android:screenOrientation="portrait" > </activity>
        <activity android:name="g.game.Activity.RegisterActivity" android:label="@string/app_name"  android:screenOrientation="portrait"> </activity>
    </application>

</manifest>
